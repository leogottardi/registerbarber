{% extends "layout.njk" %}

{% block content %}

<div class="card">

    <section class="avatar"
        style="background:url({{ client.avatar_url}}) no-repeat center center/ cover">
    </section>

    <section class="details">

        <h3>Detalhes</h3>

        <div class="item">
            <div>Cliente</div>
            <div>{{ client.name }}</div>
        </div>

        <div class="item">
            <div>Email</div>
            <div>{{ client.email }}</div>
        </div>

        <div class="item">
            <div>Anivers√°rio</div>
            <div>{{ client.birth }}</div>
        </div>

        <div class="item">
            <div>Sexo</div>
            <div>{{ "Masculino" if client.gender == "M" else "Feminino"}}</div>
        </div>

       
        <a href="/clients/{{ client.id }}/edit" class="button">Editar</a>

    </section>
</div>

{% endblock %}